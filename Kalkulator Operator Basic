#include <stdio.h>

int main() {
    char operator;
    float a, b;
    int amod, bmod;

    printf("Pilih operator: ");
    scanf("%c", &operator);
    printf("Masukkan bilangan pertama: ");
    scanf("%f", &a);
    printf("Masukkan bilangan kedua: ");
    scanf("%f", &b);

    switch(operator) {
        case '+':
            printf("%f\n", a + b);
            break;
        case '-':
            printf("%f\n", a - b);
            break;
        case '*':
            printf("%f\n", a * b);
            break;
        case '/':
            printf("%f\n", a / b);
            break;
        case '%':
         amod = (int)a;
         bmod = (int)b;
         printf("%d\n", amod % bmod);
         break;

    }

    return 0;
}
